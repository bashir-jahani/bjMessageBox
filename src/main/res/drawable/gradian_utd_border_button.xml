<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        >
        <corners android:radius="5dp"

            />
        <stroke android:color="@color/colorPrimaryDark" android:width="2dp"></stroke>


        <gradient

            android:angle="90"
            android:startColor="#c9c9c9"
            android:centerColor="#66dadada"
            android:endColor="#05ececec"

            android:type="linear"
             />
    </shape>

</item>
    <item android:state_pressed="false" >

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="5dp"

                />
            <stroke android:color="@color/colorPrimaryDark" android:width="1dp"></stroke>
            <gradient

                android:angle="270"
                android:startColor="#c9c9c9"
                android:centerColor="#66dadada"
                android:endColor="#05ececec"


                android:type="linear" />
        </shape>
    </item>


</selector>